<!DOCTYPE form-validation PUBLIC
 "-//Apache Software Foundation
//DTD Commons Validator Rules Configuration 1.3.0//EN"
 "http://jakarta.apache.org/commons/dtds/validator_1_3_0.dtd">

<form-validation>
	<formset>
		<form name="shopForm">
			<field property="producer" depends="required">
				<msg name="required" key="empty.producer" />
			</field>

			<field property="model" depends="required, mask">
				<msg name="required" key="empty.model" />
				<msg name="mask" key="wrong.model.format" />

				<var>
					<var-name>mask</var-name>
					<var-value>[a-zA-Z]{2}\d{3}</var-value>
				</var>
			</field>

			<field property="color" depends="required">
				<msg name="required" key="empty.color" />
			</field>
		</form>
	</formset>
</form-validation>